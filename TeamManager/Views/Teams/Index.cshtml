@model IEnumerable<TeamManager.Models.Team>

@{
    ViewData["Title"] = "Index";
}
<div class="d-flex flex-row d-flex justify-content-between">
    <h1>Index</h1>
    <p>
        <a asp-action="Create">
            <i data-toggle="tooltip" data-placement="left" style="padding-top: 4px"
                title="Create new" class="fas fa-plus-square fa-3x"></i>
        </a>
    </p>
</div>  

<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">
            <span class="input-group-addon">
                <i class="fas fa-search"></i>
            </span>
        </span>
    </div>
    <input type="text" class="form-control" id="myInput" placeholder="Search for teams..."
           onkeyup="showChoosedNames()" aria-label="Search" aria-describedby="basic-addon1">
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
            <tr class="searchTable">
                <td id="Name">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TeamId"><i data-toggle="tooltip" data-placement="top" title="Edit" class="fas fa-edit"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.TeamId"><i data-toggle="tooltip" data-placement="top" title="Details" class="fas fa-info-circle"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.TeamId"><i data-toggle="tooltip" data-placement="top" title="Delete" class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
